{
  "ts-node": {
    "transpileOnly": true,
    "files": true,
  },
  "compilerOptions": {
    "target": "ESNext",
    "noImplicitAny": true,
    "outDir": "./build",
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
